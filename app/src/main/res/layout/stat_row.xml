<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/widthStatRow"
    android:layout_height="@dimen/height_stat_row">
    <TextView
        android:id="@+id/stat_row_key"
        android:layout_width="wrap_content"
        android:textSize="@dimen/txtSizeStatRow"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_alignParentStart="true"
        tools:text="Quizzer med alle riktige"/>
    <TextView
        android:id="@+id/stat_row_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txtSizeStatRow"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_alignBaseline="@id/stat_row_key"
        android:layout_marginStart="200dp"
        tools:text="999/999 riktige" />
</RelativeLayout>
